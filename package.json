{
	"name": "decouplejs",
	"version": "2.0.0-alpha5",
	"description": "A dead simple message and request bus to help you decouple your javascript code.",
	"author": "Dario Freire <dario.freire@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/dfreire/decouplejs#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/dfreire/decouplejs.git"
	},
	"bugs": {
		"url": "https://github.com/dfreire/decouplejs/issues"
	},
	"main": "build/src/main",
	"typings": "build/src/main",
	"dependencies": {
		"tslib": "~1.8.1"
	},
	"devDependencies": {
		"@types/jest": "~21.1.9",
		"@types/node": "~8.5.2",
		"coveralls": "^3.0.0",
		"jest": "~22.0.3",
		"rimraf": "~2.6.2",
		"tslint": "~5.8.0",
		"tslint-microsoft-contrib": "~5.0.1",
		"tsutils": "~2.13.1",
		"typescript": "~2.6.2"
	},
	"scripts": {
		"clean": "rimraf coverage build tmp",
		"build": "tsc -p tsconfig.release.json",
		"watch": "tsc -w -p tsconfig.release.json",
		"lint": "tslint -t stylish --project \"tsconfig.json\"",
		"pretest": "npm run lint",
		"test": "npm run test-only",
		"test-only": "jest --coverage",
		"test:watch": "jest --watch",
		"prepublishOnly": "npm run test && npm run build"
	},
	"engineStrict": true,
	"engines": {
		"node": ">= 8.9.0"
	}
}
